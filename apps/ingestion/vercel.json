{
  "buildCommand": "cd ../.. && npm run build -- --filter=@agora/shared --filter=@agora/ingestion",
  "outputDirectory": "public",
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/ingest",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/ingest-scrutins",
      "schedule": "15 2 * * *"
    },
    {
      "path": "/api/ingest-deputies",
      "schedule": "0 3 1 * *"
    }
  ]
}
